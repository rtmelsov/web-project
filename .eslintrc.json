{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "quotes": ["error", "single", { "allowTemplateLiterals": true }],
      "jsx-quotes": ["error", "prefer-single"],
      "no-console": 1,
      "no-debugger": 1,
      "no-useless-escape": 0,
      "no-multiple-empty-lines": 2,
      "no-unexpected-multiline": 2
    }
}